<%= form_with model: @task_template, local: true do |f|%>
<%= render 'shared/error_messages', model: @task_template %>

  <div class="task">
    <div class="task-template-days">
      <%= f.number_field :task_template_days, id: "task-template-days", placeholder: "日数(日)" %>
    </div>
    <div class="task-template-title">
      <%= f.text_field :task_template_title, id: "task-template-title", placeholder: "タスク名" %>
    </div>
  </div>

  <div id="subtasks-container">
  <%= f.fields_for :subtask_templates do |subtask_f| %> 
    <%= subtask_f.hidden_field :id %>
    <div class="subtask">
      <div class="subtask-template-days">
        <%= subtask_f.number_field :subtask_template_days, id: "subtask-template-days", placeholder: "日数(日)" %>
      </div>
      <div class="subtask-title">
        <%= subtask_f.text_field :subtask_template_title, id: "subtask-template-title",  placeholder: "サブタスク名" %>
      </div>
    </div>
  <% end %>
  </div>

  <%= button_tag 'サブタスク追加', type: 'button', id: 'add-subtask-template-button' %>

  <div class="edit-buttons">
    <%= f.submit "更新", class: "edit-button" %>
    <% if @task_template.new_record? %>
      <%= link_to 'もどる', tasks_path, class: "back-button" %>
    <% else %>
      <%= link_to 'もどる', task_path(@task), class: "back-button" %>
    <% end %>
  </div>

<% end %>
